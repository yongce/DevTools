<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.AdapterView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="AppTheme.GridView" parent="AppTheme.AdapterView">
        <item name="android:padding">@dimen/grid_padding</item>
        <item name="android:columnWidth">100dp</item>
        <item name="android:horizontalSpacing">@dimen/grid_spacing</item>
        <item name="android:verticalSpacing">@dimen/grid_spacing</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="AppTheme.GridViewItem">
        <item name="android:background">@drawable/grid_item_bkg</item>
    </style>

    <style name="AppTheme.ListView" parent="AppTheme.AdapterView">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <style name="AppTheme.ListViewItem">
        <item name="android:paddingLeft">@dimen/list_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/list_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/list_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_padding_vertical</item>
    </style>
</resources>